<h1>List of Users</h1>

<table border="1">
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
    <th></th>
  </tr>

  <% @list_of_users.each do |a_user| %>
    <tr>
      <td>
        <%= a_user.username %>
      </td>

      <td>
        <% if a_user.private == true %>
          Yes
        <% else %>
          No 
        <% end %>
      </td>

      <td>
        Follow
      </td>

      <td>
        Show details
      </td>
    </tr>
  <% end %>
</table>
